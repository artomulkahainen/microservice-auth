{
    "compilerOptions": {
        "baseUrl": "./src",
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./build",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@dto/*": ["dto/*"],
            "@mappers/*": ["mappers/*"],
            "@routes/*": ["routes/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"],
            "@validators/*": ["validators/*"]
        }
    },
    "exclude": ["src/tests"]
}
